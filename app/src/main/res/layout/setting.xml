<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/info"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin1"
            android:layout_marginTop="@dimen/activity_vertical_margin1"
            android:src="@drawable/personal_head_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="工号：******"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/choice"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/info">
        <LinearLayout
            android:id="@+id/choose_line1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin1">
            <ImageView
                android:id="@+id/choose_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/search_line_ic"
                android:layout_marginLeft="@dimen/activity_horizontal_margin" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择班车线"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/activity_horizontal_margin"/>

        </LinearLayout>

        <include layout="@layout/view_divider_horizontal" />

        <LinearLayout
            android:id="@+id/check_line1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin1"
            android:layout_marginTop="@dimen/activity_horizontal_margin">
            <ImageView
                android:id="@+id/check_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/linedetail_timetable_ic"
                android:layout_marginLeft="@dimen/activity_horizontal_margin" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看班车线"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/activity_horizontal_margin"/>

        </LinearLayout>

        <include layout="@layout/view_divider_horizontal" />

        <LinearLayout
            android:id="@+id/urge1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin1"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin">
            <ImageView
                android:id="@+id/urge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/person_urge_ic"
                android:layout_marginLeft="@dimen/activity_horizontal_margin" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="反馈"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/activity_horizontal_margin"/>

        </LinearLayout>

        <include layout="@layout/view_divider_horizontal" />

        <LinearLayout
            android:id="@+id/notice1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin1"
            android:layout_marginTop="@dimen/activity_horizontal_margin">
            <ImageView
                android:id="@+id/notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/person_notice_ic"
                android:layout_marginLeft="@dimen/activity_horizontal_margin" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知消息"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/activity_horizontal_margin"/>

        </LinearLayout>

        <include layout="@layout/view_divider_horizontal" />

        <LinearLayout
            android:id="@+id/setting1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin1"
            android:layout_marginTop="@dimen/activity_horizontal_margin">
            <ImageView
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/person_set_ic"
                android:layout_marginLeft="@dimen/activity_horizontal_margin" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/activity_horizontal_margin"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D0D0D0"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ImageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_homeg_ic"
            android:background="#00000000"/>

        <ImageButton
            android:id="@+id/ImageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_tab_discovery"
            android:background="#00000000"/>

        <ImageButton
            android:id="@+id/ImageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home_personalb_ic"
            android:background="#00000000"/>
    </LinearLayout>

</RelativeLayout>